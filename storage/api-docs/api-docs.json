{
    "openapi": "3.0.0",
    "info": {
        "title": "ORCHID REST API",
        "description": "L5 Swagger OpenApi description",
        "contact": {
            "name": "Pires Lufungula",
            "email": "pireslfgl@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/orchid-campus",
            "description": "Orchid campus Server"
        }
    ],
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "Register"
                ],
                "summary": "Save new user",
                "operationId": "create",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SaveNewUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SaveNewUserRequest": {
                "title": "Save NewUserRequest request",
                "description": "Create user account request body data",
                "required": [
                    "name",
                    "first_name",
                    "sex",
                    "birth_date",
                    "residence_contry",
                    "citizenship",
                    "email",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                    "name": {
                        "title": "name",
                        "type": "string",
                        "example": "LUFUNGULA"
                    },
                    "first_name": {
                        "title": "first_name",
                        "type": "string",
                        "example": "Nico"
                    },
                    "sex": {
                        "title": "sex",
                        "description": "Choose the sex M or F",
                        "type": "string",
                        "example": "M"
                    },
                    "phone": {
                        "title": "phone",
                        "description": "Phone number",
                        "type": "string",
                        "example": "8169394833"
                    },
                    "birth_date": {
                        "title": "birth_date",
                        "type": "string",
                        "format": "date",
                        "example": "2000-01-12"
                    },
                    "residence_contry": {
                        "title": "residence_contry",
                        "description": "1 => Afghanistan, 2 => Afrique du Sud",
                        "type": "string",
                        "example": "1"
                    },
                    "citizenship": {
                        "title": "citizenship",
                        "description": "1 => Afghanistan, 2 => Afrique du Sud",
                        "type": "string",
                        "example": "1"
                    },
                    "email": {
                        "title": "email",
                        "type": "string",
                        "example": "test2@gmail.com"
                    },
                    "password": {
                        "title": "password",
                        "description": "User password",
                        "type": "string",
                        "format": "password",
                        "example": "password123@P"
                    },
                    "password_confirmation": {
                        "title": "password",
                        "description": "User password_confirmation",
                        "type": "string",
                        "format": "password",
                        "example": "password123@P"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "ORCHID CAMPUS PROJECT",
            "description": "API Endpoints of Projects"
        }
    ]
}